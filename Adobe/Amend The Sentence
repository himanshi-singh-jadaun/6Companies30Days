class Solution{
    public:
    string amendSentence (string s)
    {
        // your code here
        string str="";
        for(int i=0;i<s.length();i++)
        {
            if(s[i] >='A' && s[i]<='Z')
            {
                if(i!=0){
                    str+=" ";
                }                
                 str+=s[i]+32;
            }else{
                str+=s[i];
            }
        }
        return str;
    }
};

